---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import FormationDetails from '../components/FormationDetails.astro';
import CTASection from '../components/CTASection.astro';

import formations from '../data/formations.json';
---
<BaseLayout
  title="Formations — Elodie Mignot"
  description="Formations esthétiques sérieuses, humaines et orientées vers la pratique."
>
  <section class="container-shell py-20">
    <SectionTitle
      eyebrow="Formations"
      title="Former des professionnelles sûres et confiantes"
      subtitle="Formations pour se perfectionner ou se reconvertir, avec une approche humaine, exigeante et tournée vers la pratique."
    />
    <div class="mt-10 grid gap-6">
      {formations.map((formation) => (
        <FormationDetails formation={formation} />
      ))}
    </div>
  </section>

  <section class="container-shell py-20">
    <CTASection
      title="Recevoir les informations de formation"
      subtitle="Échangeons sur votre projet de perfectionnement ou de reconversion."
      primaryLabel="Me contacter"
      primaryHref="/contact"
      secondaryLabel="Voir les prestations"
      secondaryHref="/prestations"
    />
  </section>
</BaseLayout>

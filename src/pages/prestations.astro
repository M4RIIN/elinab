---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import PrestationsList from '../components/PrestationsList.astro';
import CTASection from '../components/CTASection.astro';

import prestations from '../data/prestations.json';
---
<BaseLayout
  title="Prestations — ELINA B - Esthétique & formations"
  description="Découvrez nos prestations premium en beauté, cosmétique et soins."
>
  <section class="container-shell py-20">
    <SectionTitle
      eyebrow="Prestations"
      title="Des soins signatures pour chaque besoin"
      subtitle="Nos protocoles sont personnalisés après diagnostic et adaptés à votre peau."
    />
    <div class="mt-10">
      <PrestationsList items={prestations} />
    </div>
  </section>

  <section class="container-shell py-20">
    <CTASection
      title="Réserver votre rituel"
      subtitle="Contactez-nous pour planifier votre prestation ou créer un protocole sur-mesure."
      primaryLabel="Réserver maintenant"
      primaryHref="/contact"
      secondaryLabel="Voir les formations"
      secondaryHref="/formations"
    />
  </section>
</BaseLayout>

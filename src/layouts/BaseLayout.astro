---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
const {
  title = 'Elodie Mignot - Beauté, cosmétique et soins',
  description = "Soins esthétiques sur-mesure et formations professionnelles à Saint-Orens-de-Gameville.",
  image = `${base}logo.png`,
} = Astro.props;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#101010" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:opsz,wght@6..96,400;6..96,500;6..96,600;6..96,700&family=Montserrat:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href={`${base}logo.png`} />
    <link rel="shortcut icon" href={`${base}logo.png`} />
    <link rel="apple-touch-icon" href={`${base}logo.png`} />
  </head>
  <body class="min-h-screen bg-[linear-gradient(160deg,_#fdfaf4_0%,_#f4ebdd_45%,_#faf6ee_100%)]">
    <Navbar />
    <main class="pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  @import "../styles/global.css";
</style>

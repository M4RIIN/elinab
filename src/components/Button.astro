---
const {
  href,
  variant = 'primary',
  size = 'md',
  type = 'button',
} = Astro.props;

const base =
  'inline-flex items-center justify-center gap-2 rounded-full font-semibold uppercase tracking-[0.2em] transition duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink/60 focus-visible:ring-offset-2 focus-visible:ring-offset-ivory';

const variants = {
  primary: 'bg-ink text-ivory hover:-translate-y-0.5 hover:bg-ink/90',
  secondary: 'border border-ink/25 bg-white text-ink hover:-translate-y-0.5 hover:border-ink/50',
  ghost: 'text-ink hover:text-cocoa',
};

const sizes = {
  sm: 'px-4 py-2 text-[0.65rem]',
  md: 'px-6 py-3 text-xs',
  lg: 'px-7 py-3.5 text-xs',
};

const classes = `${base} ${variants[variant]} ${sizes[size]}`;
---
{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

---
import Button from './Button.astro';
const {
  title,
  subtitle,
  primaryLabel,
  primaryHref,
  secondaryLabel,
  secondaryHref,
} = Astro.props;
---
<section class="relative overflow-hidden rounded-2xl border border-gold/35 bg-[linear-gradient(145deg,_rgba(255,255,255,0.96),_rgba(245,245,245,0.9))] px-6 py-12 text-ink sm:px-10">
  <div class="absolute inset-0 opacity-25 [background-image:radial-gradient(circle_at_top,_rgba(183,154,107,0.3),_transparent_60%)]"></div>
  <div class="relative flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
    <div class="space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-gold">Contact</p>
      <h3 class="font-display text-3xl sm:text-4xl">{title}</h3>
      <p class="max-w-2xl text-sm text-cocoa/80">{subtitle}</p>
    </div>
    <div class="flex flex-wrap gap-4">
      {primaryLabel && primaryHref && (
        <Button href={primaryHref} variant="primary">{primaryLabel}</Button>
      )}
      {secondaryLabel && secondaryHref && (
        <Button href={secondaryHref} variant="secondary">{secondaryLabel}</Button>
      )}
    </div>
  </div>
</section>

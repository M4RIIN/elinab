---
const { formation } = Astro.props;
---
<article class="rounded-2xl border border-gold/35 bg-[linear-gradient(165deg,_rgba(255,255,255,0.9),_rgba(247,244,238,0.78))] p-6 shadow-soft">
  {(formation.duration || formation.price) && (
    <div class="flex flex-wrap items-center justify-between gap-3 text-xs uppercase tracking-[0.3em] text-cocoa/75">
      <span>{formation.duration}</span>
      <span class="text-gold">{formation.price}</span>
    </div>
  )}
  <h3 class="mt-4 font-display text-2xl">{formation.name}</h3>
  <p class="mt-3 text-sm text-cocoa/80">{formation.description}</p>
  <div class="mt-5 grid gap-3 text-sm text-cocoa/80">
    {formation.program?.length > 0 && (
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-gold">Programme</p>
        <ul class="mt-3 list-disc space-y-1 pl-5">
          {formation.program.map((module) => (
            <li>{module}</li>
          ))}
        </ul>
      </div>
    )}
    {(formation.format || formation.location || formation.level) && (
      <div class="grid gap-1 text-xs uppercase tracking-[0.3em] text-cocoa/70">
        {formation.format && <span>{formation.format}</span>}
        {formation.location && <span>{formation.location}</span>}
        {formation.level && <span>{formation.level}</span>}
      </div>
    )}
  </div>
</article>
